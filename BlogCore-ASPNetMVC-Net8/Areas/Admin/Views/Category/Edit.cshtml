@model BlogCore_ASPNetMVC_Net8.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<br/>
<br/>
<h3 class="text-center">Edit category</h3>
<form method="post" asp-action="Edit">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-info"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" placeholder="Type your name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <br/>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Order"></label>
                </div>
                <br />
                <div class="col-8">
                    <input asp-for="Order" class="form-control" placeholder="Type your order" />
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col">
                    <button type="submit" class="btn-secondary form-control">Edit category</button>
                </div>
                &nbsp;
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Go back</a>
                </div>
            </div>
        </div>
    </div>
</form>