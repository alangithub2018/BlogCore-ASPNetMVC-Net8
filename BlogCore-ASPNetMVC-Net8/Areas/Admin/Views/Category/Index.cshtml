    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> Add new category</a>
        </div>
    </div>
