@{
    ViewData["Title"] = "Slider List";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Slider List</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> Add new slider</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblSlider" class="table table-striped table-bordered" style="width: 100%;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>State</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/slider.js"></script>
}